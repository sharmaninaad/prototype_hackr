<?xml version="1.0" encoding="utf-8"?>
<!-- Definig a container for you List Item-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    >

    <!-- Defining where should text be placed. You set you text color here-->
    <TextView
        android:id="@+id/list_content"
        android:textColor="#6b0a0a"
        android:gravity="top|left"
        android:text="sample"
        android:shadowColor="#11778087"


        android:layout_margin="4dip"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d28bcf">
        <TextView
            android:id="@+id/pay"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:background="#d17e7e"
            android:gravity="top|left"
            android:text="Paid/Free"

            />
        <TextView
            android:id="@+id/votes"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="28dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:background="#bca91c"
            android:gravity="top|left"
            android:text="n Upvotes"

            />

        <TextView
            android:id="@+id/vid"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="28dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:background="#3f8108"
            android:gravity="top|left"
            android:text="Video/Text"

            />
    </LinearLayout>

</LinearLayout>